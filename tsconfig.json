{
    "compilerOptions": {
        "target": "ES2021",
        "lib": [
            "es2020",
            "es2017",
            "es2017.object",
            "es2017.sharedmemory",
            "es2016",
            "es2016.array.include",
            "es2015",
            "es2015.core",
            "es2015.promise",
            "es2015.collection",
            "dom"
        ],
        "module": "commonjs",
        "removeComments": false,
        "sourceMap": true,
        "strictNullChecks": true,
        "typeRoots": [
            "./node_modules/@webgpu/types",
            "./node_modules/@types"
        ],
        "resolveJsonModule": true
    },
    "include": [
        "definitions.d.ts",
        "src/**/*",
    ],
    "compileOnSave": false,
    "buildOnSave": false
}